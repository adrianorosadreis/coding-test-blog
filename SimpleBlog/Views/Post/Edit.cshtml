@model SimpleBlog.Models.Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Postagem</h2>

<form method="post">
    <div class="form-group">
        <label for="Title">Título</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label for="Content">Conteúdo</label>
        <textarea class="form-control" id="Content" name="Content" rows="5" required>@Model.Content</textarea>
    </div>
    <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
    <button type="submit" class="btn btn-primary mt-3">Atualizar</button>
</form>

<p class="mt-3">
    <a href="@Url.Action("Index", "Post")" class="btn btn-secondary">Voltar para a lista de postagens</a>
</p>